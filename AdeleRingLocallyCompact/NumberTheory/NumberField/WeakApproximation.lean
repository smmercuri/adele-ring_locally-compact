theorem exists_ne_one : ‚àÉ x ‚â† 0, v x ‚â† 1 := by
  use 2, by norm_num
  let ‚ü®œÜ, hœÜ‚ü© := v.2
  simp only [coe_apply, ‚Üê hœÜ, place_apply, map_ofNat, RCLike.norm_ofNat, ne_eq, OfNat.ofNat_ne_one,
    not_false_eq_true]

