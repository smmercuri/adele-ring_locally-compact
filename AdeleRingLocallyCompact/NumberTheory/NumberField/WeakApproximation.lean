theorem eq_pow_iff_lt_one_iff (v w : AbsoluteValue K ‚Ñù) (hv : ‚àÉ x ‚â† 0, v x ‚â† 1) :
    (‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, v x = (w x) ^ t) ‚Üî (‚àÄ x, v x < 1 ‚Üî w x < 1) := by
  refine ‚ü®fun ‚ü®t, ht, h‚ü© x => h x ‚ñ∏ Real.rpow_lt_one_iff' (w.nonneg _) ht, fun h => ?_‚ü©
  have h' := one_lt_iff_of_lt_one_iff h
  suffices : ‚àÉ (t : ‚Ñù) (_ : t > 0), ‚àÄ x, 1 < v x ‚Üí v x = w x ^ t
  ¬∑ obtain ‚ü®t, ht, hsuff‚ü© := this
    refine ‚ü®t, ht, fun x => ?_‚ü©
    by_cases h‚ÇÄ : v x = 0
    ¬∑ rw [(map_eq_zero v).1 h‚ÇÄ, map_zero, map_zero, zero_rpow (by linarith)]
    ¬∑ by_cases h‚ÇÅ : v x = 1
      ¬∑ rw [h‚ÇÅ, (eq_one_iff_of_lt_one_iff h x).1 h‚ÇÅ, one_rpow]
      ¬∑ by_cases h‚ÇÇ : 0 < v x ‚àß v x < 1
        ¬∑ rw [‚Üê inv_inj, ‚Üê map_inv‚ÇÄ v, hsuff _ (one_lt_inv_iff.2 h‚ÇÇ), map_inv‚ÇÄ,
            Real.inv_rpow (w.nonneg _)]
        ¬∑ rw [‚Üê one_lt_inv_iff, not_lt] at h‚ÇÇ
          rw [‚Üê ne_eq, ‚Üê inv_ne_one, ‚Üê map_inv‚ÇÄ] at h‚ÇÅ
          exact hsuff _ <| (inv_lt_one_iff.1 <| lt_of_le_of_ne h‚ÇÇ h‚ÇÅ).resolve_left
            ((map_ne_zero v).1 h‚ÇÄ)
  obtain ‚ü®a, ha, hlog‚ü© := log_div_image_eq_singleton_of_le_one_iff hv h
  use Real.log (v a) / Real.log (w a)
  use div_pos (Real.log_pos ha) (Real.log_pos ((h' a).1 ha))
  intro b hb
  simp_rw [‚Üê hlog b hb]
  rw [div_eq_inv_mul, Real.rpow_mul (AbsoluteValue.nonneg _ _),
    Real.rpow_inv_log, Real.exp_one_rpow, Real.exp_log (by linarith)]
  ¬∑ linarith [(one_lt_iff_of_lt_one_iff h b).1 hb]
  ¬∑ linarith [(one_lt_iff_of_lt_one_iff h b).1 hb]

theorem exists_lt_one_one_le_of_ne_pow (hv : ‚àÉ x ‚â† 0, v x ‚â† 1)
    (h : ¬¨‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, v x = (w x) ^ t) :
    ‚àÉ a : K, v a < 1 ‚àß 1 ‚â§ w a := by
  by_contra! h'
  let ‚ü®x‚ÇÄ, hx‚ÇÄ‚ü© := exists_lt_one_of_exists_ne_one hv
  have : ‚àÄ a : K, v a < 1 ‚Üî w a < 1 := by
    intro a
    refine ‚ü®h' a, ?_‚ü©
    intro hw
    by_contra h''
    simp at h''
    have (n : ‚Ñï) (hn : n ‚â† 0) : w (x‚ÇÄ) < w a ^ n ‚àß w a ^ n < 1 := by
      refine ‚ü®?_, ?_‚ü©
      ¬∑ have : v (x‚ÇÄ * (1 / a ^ n)) < 1 := by
          rw [map_mul]
          have : v (1 / a ^ n) ‚â§ 1 := by
            rw [one_div, map_inv‚ÇÄ, map_pow]
            apply inv_le_one
            apply one_le_pow‚ÇÄ h''
          rw [one_div, map_inv‚ÇÄ, map_pow]
          rw [mul_inv_lt_iff, mul_one]
          ¬∑ apply lt_of_lt_of_le hx‚ÇÄ.2
            apply one_le_pow‚ÇÄ h''
          ¬∑ apply pow_pos (by linarith)
        have := h' _ this
        rw [map_mul, one_div, map_inv‚ÇÄ, mul_inv_lt_iff, mul_one, map_pow] at this
        ¬∑ exact this
        ¬∑ rw [map_pow]
          apply pow_pos (pos_of_pos w (by linarith))
      ¬∑ apply pow_lt_one (w.nonneg _) hw hn
    have hwn : Filter.Tendsto (fun n => w.norm a ^ n) Filter.atTop (ùìù 0) := by
      simp only [tendsto_pow_atTop_nhds_zero_iff, abs_norm]
      exact hw
    have hcontr : Filter.Tendsto (fun (_ : ‚Ñï) => w x‚ÇÄ) Filter.atTop (ùìù 0) := by
      have hf : Filter.Tendsto (fun _ : ‚Ñï => (0 : ‚Ñù)) Filter.atTop (ùìù 0) := tendsto_const_nhds
      have hwf : ‚àÄ·∂† (_ : ‚Ñï) in Filter.atTop, 0 ‚â§ w x‚ÇÄ := by
        simp only [one_div, map_inv‚ÇÄ, inv_nonneg, apply_nonneg, Filter.eventually_atTop, ge_iff_le,
          implies_true, exists_const]
      have hwn' : ‚àÄ·∂† n in Filter.atTop, w (x‚ÇÄ) ‚â§ w.norm a ^ n := by
        simp only [Filter.eventually_atTop, ge_iff_le]
        use 1
        intro n hn
        exact le_of_lt (this n (by linarith)).1
      exact tendsto_of_tendsto_of_tendsto_of_le_of_le' (f := fun _ => w x‚ÇÄ) hf hwn hwf hwn'
    have hcontr := tendsto_nhds_unique hcontr tendsto_const_nhds |>.symm
    have := pos_of_pos w hx‚ÇÄ.1
    linarith
  rw [eq_pow_iff_lt_one_iff _ _ hv] at h
  exact h this

theorem ne_pow_symm (h : ¬¨‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, v x = (w x) ^ t) :
    ¬¨‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, w x = (v x) ^ t := by
  simp_all
  intro t ht
  let ‚ü®x, hx‚ü© := h t‚Åª¬π (_root_.inv_pos.2 ht)
  use x
  contrapose! hx
  rw [Real.eq_rpow_inv (v.nonneg _) (w.nonneg _) (by linarith)]
  exact hx.symm

theorem exists_lt_one_one_lt_of_ne_pow
    (hv : ‚àÉ x ‚â† 0, v x ‚â† 1)
    (hw : ‚àÉ x ‚â† 0, w x ‚â† 1)
    (h : ¬¨‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, v x = (w x) ^ t) :
    ‚àÉ a : K, 1 < v a ‚àß w a < 1 := by
  obtain ‚ü®a, ha‚ü© := exists_lt_one_one_le_of_ne_pow hv h
  obtain ‚ü®b, hb‚ü© := exists_lt_one_one_le_of_ne_pow hw (ne_pow_symm h)
  use b / a
  rw [map_div‚ÇÄ, map_div‚ÇÄ]
  constructor
  ¬∑ rw [one_lt_div]
    ¬∑ linarith
    ¬∑ by_contra hv
      simp at hv
      exact v.pos_iff.1 (pos_of_pos v (by linarith)) hv
  ¬∑ rw [div_lt_one]
    ¬∑ linarith
    ¬∑ linarith

