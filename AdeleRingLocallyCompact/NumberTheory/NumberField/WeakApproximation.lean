lemma coe_apply {K : Type*} [Field K] (v : InfinitePlace K) (x : K) :
    v x = v.1 x := rfl

theorem eq_of_eq_pow (h : ‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, v x = (w x) ^ t) : v = w := by
  let ‚ü®t, _, h‚ü© := h
  have ht : t = 1 := by
    let ‚ü®œàv, hœàv‚ü© := v.2
    let ‚ü®œàw, hœàw‚ü© := w.2
    simp only [coe_apply, ‚Üê hœàv, ‚Üê hœàw, Rat.cast_ofNat, place_apply, map_ofNat,
      RCLike.norm_ofNat] at h
    have := congrArg (Real.logb 2) (h 2)
    norm_num at this
    exact this.symm
  simp only [ht, Real.rpow_one] at h
  exact Subtype.ext <| AbsoluteValue.ext h

theorem eq_pow_of_eq (h : v = w) : ‚àÉ (t : ‚Ñù) (_ : 0 < t), ‚àÄ x, v x = (w x) ^ t :=
  ‚ü®1, by linarith, fun x => by rw [h, Real.rpow_one]‚ü©

